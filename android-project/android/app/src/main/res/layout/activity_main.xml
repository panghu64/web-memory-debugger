<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Word">
    </TextView>
    <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="跳转"
            android:id="@+id/but"/>
    <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="读取内存地址"
            android:id="@+id/but1"
            android:layout_marginTop="10dp"/>

    <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入64位地址（如 704CC11D58）"
            android:inputType="textNoSuggestions"
            android:layout_marginTop="12dp"
            android:maxLines="1"/>

    <EditText
            android:id="@+id/et_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入4字节整数值（十进制，如 10000）"
            android:inputType="numberSigned"
            android:maxLines="1"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btn_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写入并校验"
            android:layout_marginTop="8dp"/>

    <CheckBox
            android:id="@+id/cb_freeze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持续保持该值（自动重写）"
            android:layout_marginTop="6dp"/>
    <TextView android:layout_width="200dp" android:layout_height="wrap_content"
              android:layout_marginTop="10sp"
              android:text="Fuck"
              android:textColor="#FF00FFF6"
              android:textSize="17sp"
              android:background="#FF0055FF"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="5sp"
              android:text="Fucking"
              android:textSize="17sp"
              android:textColor="#FF88F5F9"
              android:background="#FF993362"
              android:id="@+id/tv_code"
    />
    
    <!-- Web调试服务器控件 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="#FFEEEEEE">
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web内存调试器"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF2C3E50"/>
        
        <Button
                android:id="@+id/btn_start_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动Web服务器"
                android:layout_marginTop="10dp"/>
        
        <TextView
                android:id="@+id/tv_server_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务器未启动"
                android:textColor="#FF666666"
                android:layout_marginTop="8dp"
                android:padding="8dp"/>
    </LinearLayout>
</LinearLayout>
